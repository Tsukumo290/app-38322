<div class="clothes-form-content">
  <div class="notifications">
    <div class="alert"><%= alert %></div>
  </div>
    <%= form_with(model: @closet, id: 'post-form', local: true) do |form| %>
      <div class="clothes-form">

        <div class="image-preview">
          <div id="previews"></div>
          <div id="preview-none"><%= image_tag "noimage.png" %></div>
          <div class="image-form"><%= form.file_field :image %></div>
        </div>

        <div class="form-right" >
        <div class="clothes-category"><%= form.text_field :brand, placeholder: "ブランド" %></div>
        <div class="clothes-category"><%= form.text_field :price, placeholder:"購入額" %></div>
        <div class="clothes-category"><%= form.collection_select(:genre_id, Genre.all, :id, :name, {}, {class:"select-box", id:"clothes-category"}) %></div>
        <div class="clothes-category"><%= form.collection_select(:color_id, Color.all, :id, :name, {}, {class:"select-box", id:"clothes-category"}) %></div>
        <div class="clothes-category"><%= form.collection_select(:size_id, Size.all, :id, :name, {}, {class:"select-box", id:"clothes-category"}) %></div>
        <div class="clothes-category"><%= form.collection_select(:season_id, Season.all, :id, :name, {}, {class:"select-box", id:"clothes-category"}) %></div>
        <div class="closet-submit"><%= form.submit "保管する" %></div>
        </div>

      </div>
    <% end %>
</div>