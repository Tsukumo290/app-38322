<div class='user-form-content'>
  <div class="user-form-title">メールアドレスでログイン</div>
  <div class="user-form">
    <%= form_with model: @user, url: user_session_path, local: true do |f|%>
      <div class='login-flash-message'>
        <%= notice %>
        <%= alert %>
      </div>
      <div class='user-form-input'>
        <%= f.email_field :email, placeholder: "メールアドレス", autofocus: true%>
      </div>
      <div class='user-form-input'>
        <%= f.password_field :password, placeholder: "パスワード(英数字6文字以上)", autocomplete: "off"%>
      </div>
      <div class='user-form-btn'>
        <%= f.submit "ログイン" %>
      </div>
    <% end %>
    <div class="others-sign-in">または</div>
    <div class="sign-in m"><%= link_to "メールアドレスで新規登録", new_registration_path(resource_name) %></div>
    <div class="others-account">他のアカウントでログイン</div>
    <div class="sign-in g"><%= link_to "ゲストログイン", users_guest_sign_in_path, method: :post %></div>
    <div class="sign-in t"><%= link_to "Twitterでログイン", "#" %></div>
  </div>
</div>