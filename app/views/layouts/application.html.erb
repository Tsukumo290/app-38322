<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>CLouck</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <header class="header">
    <% if user_signed_in? %>
    <div class="header-menu">
      <div class="header-title"><%= link_to "CLouck", root_path %></div>

      <div class="header-right">
        <div class="nickname"><%= current_user.name %></div>
        <div>
          <% if current_user.email == 'guest@email'%>
          <%= link_to image_tag("user.png"), destroy_user_session_path, method: :delete %>
          <% else %>
          <%= link_to image_tag("user.png"), edit_user_path(current_user) %>
          <% end %>
        </div>
      </div>
    </div>
    <% end %>
  </header>

  <body>
    <div class="body">
    <%= yield %>
    </div>
  </body>

  <footer class="footer">
    <% if user_signed_in? %>
    <div class="foote-menus">
      <div class="footer-menu">
        <div><%= link_to image_tag("closet.png"), root_path %></div>
        <div><%= link_to image_tag("clothes.png"), new_closet_path %></div>
        <div><%= link_to image_tag("memo.png"), calendars_path %></div>
        <div><%= link_to image_tag("graph.png"), stats_closets_path %></div>
      </div>
    </div>
    <% end %>
  </footer>
</html>
